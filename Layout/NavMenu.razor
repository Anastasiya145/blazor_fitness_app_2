<div class="mobile-navbar">
    <div class="navbar-content">
        <a class="navbar-brand" href="">🏋️ Fitness App</a>
        <button class="mobile-menu-toggle" @onclick="ToggleNavMenu">
            <span class="hamburger-icon">☰</span>
        </button>
    </div>
    
    <div class="@NavMenuCssClass mobile-nav-menu">
        <nav class="nav flex-column">
            <div class="nav-item">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick="ToggleNavMenu">
                    <span class="nav-icon">🏠</span> Home
                </NavLink>
            </div>
            @* <div class="nav-item">
                <NavLink class="nav-link" href="/exercises" @onclick="ToggleNavMenu">
                    <span class="nav-icon">💪</span> Exercises
                </NavLink>
            </div> *@
        </nav>
    </div>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
